<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="carros.com.br.crecheepreescola.fragment.DiarioResponsavelFragment">

    <TextView
        android:id="@+id/tituloInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_Titulo_Diario_Responsavel"
        android:text="@string/diario_titulo_inicial"
        android:textStyle="bold"
        android:layout_marginTop="16sp"
        android:textColor="@color/color_Titulo_Nome_Diario_Responsavel"
        android:textAlignment="center"
        android:textSize="24dp" />

    <LinearLayout
        android:id="@+id/linearLayoutDiario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/presenca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="18dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_presenca" />

                    <TextView
                        android:id="@+id/respPresenca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/mamadeira"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_mamadeira" />

                    <TextView
                        android:id="@+id/respMamadeira"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/lancheManha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_lanche_manha" />

                    <TextView
                        android:id="@+id/respLancheManha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />

                    <TextView
                        android:id="@+id/almoco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_almoco" />

                    <TextView
                        android:id="@+id/respAlmoco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/lancheTarde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_lanche_da_tarde" />

                    <TextView
                        android:id="@+id/respLancheTarde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/jantar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_jantar" />

                    <TextView
                        android:id="@+id/respJantar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />

                    <TextView
                        android:id="@+id/remedio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_remedios" />

                    <TextView
                        android:id="@+id/respRemedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />

                    <TextView
                        android:id="@+id/respObsRemedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/participacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_participacao" />

                    <TextView
                        android:id="@+id/respParticipacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/sono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_sono" />

                    <TextView
                        android:id="@+id/respSono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />

                    <TextView
                        android:id="@+id/respTempoSono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />


                    <TextView
                        android:id="@+id/evacuacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_evacuacao" />

                    <TextView
                        android:id="@+id/respEvacuacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />
                    <TextView
                        android:id="@+id/resumoDia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:textSize="20sp"
                        android:background="@color/color_Tit_Item_Diario_Responsavel"
                        android:text="@string/diario_titulo_resumo_dia" />

                    <TextView
                        android:id="@+id/respResumoDia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="@string/resposta_diario_responsavel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dip"
                        android:text="" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>